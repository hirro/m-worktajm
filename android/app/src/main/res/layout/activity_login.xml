<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/WorktajmLogin"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".LoginActivity">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_gravity="right" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/email_login_form_01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loginTitle"
                style="@style/WorktajmLoginTextViewLarge"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/LoginTimeReports" />

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <AutoCompleteTextView
                android:id="@+id/email"
                android:nextFocusForward="@+id/password"
                style="@style/WorktajmLoginTextView"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                android:nextFocusForward="@+id/email"
                style="@style/WorktajmLoginTextView"
                android:hint="@string/prompt_password"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword" />

            <CheckBox
                style="@style/WorktajmText"
                android:text="Remember me"
                android:id="@+id/rememberMe" />

            <Button
                android:id="@+id/email_sign_in_button"
                android:nextFocusForward="@+id/email"
                style="@style/WorktajmLoginButton"
                android:text="@string/action_sign_in" />

            <!-- stretching frame layout, using layout_weight -->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"></FrameLayout>

            <!-- content fixated to the bottom of the screen -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- your bottom content -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:capitalize="characters"
                    android:editable="true"
                    android:text="@string/sign_in_with"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/googleLoginButton"
                    style="@style/WorktajmLoginButton"
                    android:text="@string/action_sign_in_with_google" />

                <Button
                    android:id="@+id/facebookLoginButton"
                    style="@style/WorktajmLoginButton"
                    android:background="#1020ff"
                    android:text="@string/action_sign_in_with_facebook" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
